@inherits ViewBase<PlayerViewModel>

<TableRow>
    <TableRowHeader
        TextColor="@(DataContext.IsDisqualified ? TextColor.Danger : TextColor.Default)"
        TextWeight="@(DataContext.IsDisqualified ? TextWeight.Bold : TextWeight.Default)">
        @DataContext.Number
    </TableRowHeader>
    <TableRowCell
        TextColor="@(DataContext.IsDisqualified ? TextColor.Danger : TextColor.Default)"
        TextWeight="@(DataContext.IsDisqualified ? TextWeight.Bold : TextWeight.Default)">
        @DataContext.Name
    </TableRowCell>
    <TableRowCell>
        <Buttons Size="Size.ExtraSmall">
            <Blazorise.Button Color="Color.Danger" Command="@DataContext.Remove1PointCommand">-1</Blazorise.Button>
            <Blazorise.Button Color="Color.Success" Command="@DataContext.Add1PointCommand">+1</Blazorise.Button>
            <Blazorise.Button Color="Color.Success" Command="@DataContext.Add2PointCommand">+2</Blazorise.Button>
            <Blazorise.Button Color="Color.Success" Command="@DataContext.Add3PointCommand">+3</Blazorise.Button>
        </Buttons>
        <Text Style="padding-left: 10px">@DataContext.Points</Text>
    </TableRowCell>
    <TableRowCell>
        <Buttons Size="Size.ExtraSmall">
            <Blazorise.Button Color="Color.Danger" Command="@DataContext.Remove1FoulCommand">-1</Blazorise.Button>
            <Blazorise.Button Color="Color.Success" Command="@DataContext.Add1FoulCommand">+1</Blazorise.Button>
        </Buttons>
        <Text
            TextColor="@(DataContext.IsDisqualified ? TextColor.Danger : TextColor.Default)"
            TextWeight="@(DataContext.IsDisqualified ? TextWeight.Bold : TextWeight.Default)"
            Style="padding-left: 10px">
            @DataContext.Fouls
        </Text>
    </TableRowCell>
</TableRow>